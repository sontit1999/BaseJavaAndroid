<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
          <variable
              name="viewmodel"
              type="com.example.testphonefirebase.test.TestViewmodel" />
        <variable
            name="user"
            type="com.example.testphonefirebase.model.User" />
    </data>
    <LinearLayout
        android:gravity="center_horizontal"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical" android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/tv_name"
            android:text="@{viewmodel.name1}"
            android:textSize="25sp"
            android:textColor="#BD0E0E"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"></TextView>
        <Button
            android:id="@+id/btn_test"
            android:text="click me!"
            android:layout_marginTop="50dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"></Button>
        <Button
            android:id="@+id/btn_test2"
            android:text="click Ä‘i!"
            android:onClick="@{(view)->viewmodel.onButtonclickwithparam(user)}"
            android:layout_marginTop="50dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"></Button>
        <FrameLayout
            android:id="@+id/frameLayout"
            android:layout_weight="2"
            app:layout_constraintTop_toBottomOf="@id/btn_test2"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_width="match_parent"
            android:layout_height="match_parent"></FrameLayout>
    </LinearLayout>
</layout>